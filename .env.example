# Server
PORT=3000
# Base URL for generating absolute links in responses
PUBLIC_URL=http://localhost:3000

# Auth
JWT_SECRET=change-me-in-prod

# Database (individual params for local dev)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=foodies
DB_USER=postgres
DB_PASSWORD=postgres

# Alternatively, use a single connection string (e.g., on Render)
# DATABASE_URL=postgres://user:password@host:5432/database

# Database setup helpers
# If true, runs sequelize.sync({ alter: true }) on startup
SYNC=false
# If true, runs seed script on startup
SEED=false
